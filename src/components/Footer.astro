---
import { Twitter, Github, Linkedin } from 'lucide-react';

export interface Props {
  locale?: string;
}

const { locale = 'en' } = Astro.props;

const translations = {
  en: {
    copyright: "© 2025 MiniCode | Built with AI",
    links: {
      company: "Company",
      products: "Products",
      resources: "Resources",
      support: "Support"
    },
    company: [
      { name: "Careers", href: "/careers" }
    ],
    products: [
      { name: "LazyResume", href: "/products/lazyresume" },
      { name: "EVO", href: "/products/evo" },
      { name: "OpenLovely", href: "/products/OpenLovely" },
      { name: "OpenImagine", href: "/products/openimagine" },
      { name: "PeekMail", href: "/products/peekmail" }
    ],
    resources: [
      { name: "Documentation", href: "/docs" },
      { name: "API", href: "/api" }
    ],
    support: [
      { name: "Contact", href: "/contact" },
    ]
  },
  zh: {
    copyright: "© 2025 MiniCode | 由 AI 构建",
    links: {
      company: "公司",
      products: "产品",
      resources: "资源",
      support: "支持"
    },
    company: [
      { name: "招聘", href: "/zh/careers" }
    ],
    products: [
      { name: "LazyResume", href: "/zh/products/lazyresume" },
      { name: "EVO", href: "/zh/products/evo" },
      { name: "OpenLovely", href: "/zh/products/OpenLovely" },
      { name: "OpenImagine", href: "/zh/products/openimagine" },
      { name: "PeekMail", href: "/zh/products/peekmail" }
    ],
    resources: [
      { name: "文档", href: "/zh/docs" },
      { name: "API", href: "/zh/api" }
    ],
    support: [
      { name: "联系我们", href: "/zh/contact" },
    ]
  },
  ja: {
    copyright: "© 2025 MiniCode | AIで構築",
    links: {
      company: "会社",
      products: "製品",
      resources: "リソース",
      support: "サポート"
    },
    company: [
      { name: "採用", href: "/ja/careers" }
    ],
    products: [
      { name: "LazyResume", href: "/ja/products/lazyresume" },
      { name: "EVO", href: "/ja/products/evo" },
      { name: "OpenLovely", href: "/ja/products/OpenLovely" },
      { name: "OpenImagine", href: "/ja/products/openimagine" },
      { name: "PeekMail", href: "/ja/products/peekmail" }
    ],
    resources: [
      { name: "ドキュメント", href: "/ja/docs" },
      { name: "API", href: "/ja/api" }
    ],
    support: [
      { name: "お問い合わせ", href: "/ja/contact" },
    ]
  }
};

const t = translations[locale as keyof typeof translations] || translations.en;
---

<footer class="bg-gray-50 border-t border-gray-200 relative overflow-hidden">
  <div class="container mx-auto px-6 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <div class="animate-fade-in">
          <h3 class="text-2xl font-bold gradient-text mb-4">MiniCode</h3>
          <p class="text-gray-600 mb-6">
            AI-powered tools for modern development
          </p>

          <!-- Social Links -->
          <div class="flex space-x-4">
            {[
              { name: 'Twitter', icon: Twitter, href: '#' },
              { name: 'GitHub', icon: Github, href: '#' },
              { name: 'LinkedIn', icon: Linkedin, href: '#' },
            ].map((social) => (
              <a
                key={social.name}
                href={social.href}
                class="flex items-center justify-center w-10 h-10 rounded-full bg-white border border-gray-200 text-gray-600 hover:text-blue-600 hover:border-blue-200 transition-all duration-300 hover:scale-110 hover:rotate-5 active:scale-95"
                aria-label={social.name}
              >
                <social.icon class="w-5 h-5" />
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="lg:col-span-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {Object.entries(t.links).map(([key, title], index) => (
          <div
            key={key}
            class="animate-fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <h4 class="font-semibold text-gray-900 mb-4">{title}</h4>
            <ul class="space-y-3">
              {t[key as keyof typeof t.links].map((item) => {
                // Handle product items which are objects with name and href
                const itemName = typeof item === 'object' ? item.name : item;
                const itemHref = typeof item === 'object' ? item.href : `/${locale === 'en' ? '' : locale + '/'}${item.toLowerCase().replace(/\s+/g, '-')}`;

                return (
                  <li key={itemName}>
                    <a
                      href={itemHref}
                      class="text-gray-600 hover:text-blue-600 transition-colors duration-200 hover:translate-x-1"
                    >
                      {itemName}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <p class="text-gray-600 text-sm animate-fade-in">
          {t.copyright}
        </p>

        <div class="flex items-center space-x-6 mt-4 md:mt-0 animate-fade-in" style="animation-delay: 0.1s">
          <a href={`/${locale === 'en' ? '' : locale + '/'}privacy`} class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            {locale === 'en' ? 'Privacy Policy' : locale === 'zh' ? '隐私政策' : 'プライバシーポリシー'}
          </a>
          <a href={`/${locale === 'en' ? '' : locale + '/'}terms`} class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            {locale === 'en' ? 'Terms of Service' : locale === 'zh' ? '服务条款' : '利用規約'}
          </a>
          <a href={`/${locale === 'en' ? '' : locale + '/'}cookies`} class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            {locale === 'en' ? 'Cookie Policy' : locale === 'zh' ? 'Cookie 政策' : 'Cookieポリシー'}
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-blue-100 to-cyan-100 rounded-full opacity-20 -translate-x-1/2 translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-gradient-to-tl from-purple-100 to-pink-100 rounded-full opacity-20 translate-x-1/2 translate-y-1/2"></div>
  </div>
</footer>
