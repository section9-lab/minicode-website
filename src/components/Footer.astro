---
export interface Props {
  locale?: string;
}

const { locale = 'en' } = Astro.props;

const translations = {
  en: {
    copyright: "© 2025 MiniCode | Built with AI",
    links: {
      company: "Company",
      products: "Products",
      resources: "Resources",
      support: "Support"
    },
    company: ["Careers"],
    products: ["LazyResume", "Eva", "OpenLovble", "OpenImagine", "PeekMail"],
    resources: ["Documentation", "API"],
    support: ["Contact", "Help Center"]
  },
  zh: {
    copyright: "© 2025 MiniCode | 由 AI 构建",
    links: {
      company: "公司",
      products: "产品",
      resources: "资源",
      support: "支持"
    },
    company: ["招聘"],
    products: ["LazyResume", "Eva", "OpenLovble", "OpenImagine", "PeekMail"],
    resources: ["文档", "API"],
    support: ["联系我们", "帮助中心"]
  },
  ja: {
    copyright: "© 2025 MiniCode | AIで構築",
    links: {
      company: "会社",
      products: "製品",
      resources: "リソース",
      support: "サポート"
    },
    company: ["採用"],
    products: ["LazyResume", "Eva", "OpenLovble", "OpenImagine", "PeekMail"],
    resources: ["ドキュメント", "API"],
    support: ["お問い合わせ", "ヘルプセンター"]
  }
};

const t = translations[locale as keyof typeof translations] || translations.en;
---

<footer class="bg-gray-50 border-t border-gray-200 relative overflow-hidden">
  <div class="container mx-auto px-6 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <div class="animate-fade-in">
          <h3 class="text-2xl font-bold gradient-text mb-4">MiniCode</h3>
          <p class="text-gray-600 mb-6">
            AI-powered tools for modern development
          </p>

          <!-- Social Links -->
          <div class="flex space-x-4">
            {[
              { name: 'Twitter', icon: '𝕏', href: '#' },
              { name: 'GitHub', icon: '⚡', href: '#' },
              { name: 'LinkedIn', icon: 'in', href: '#' },
              { name: 'Discord', icon: '💬', href: '#' }
            ].map((social) => (
              <a
                key={social.name}
                href={social.href}
                class="flex items-center justify-center w-10 h-10 rounded-full bg-white border border-gray-200 text-gray-600 hover:text-blue-600 hover:border-blue-200 transition-all duration-300 hover:scale-110 hover:rotate-5 active:scale-95"
                aria-label={social.name}
              >
                <span class="text-sm font-bold">{social.icon}</span>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="lg:col-span-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {Object.entries(t.links).map(([key, title], index) => (
          <div
            key={key}
            class="animate-fade-in-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <h4 class="font-semibold text-gray-900 mb-4">{title}</h4>
            <ul class="space-y-3">
              {t[key as keyof typeof t.links].map((item) => (
                <li key={item}>
                  <a
                    href={`/${item.toLowerCase().replace(/\s+/g, '-')}`}
                    class="text-gray-600 hover:text-blue-600 transition-colors duration-200 hover:translate-x-1"
                  >
                    {item}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <p class="text-gray-600 text-sm animate-fade-in">
          {t.copyright}
        </p>

        <div class="flex items-center space-x-6 mt-4 md:mt-0 animate-fade-in" style="animation-delay: 0.1s">
          <a href="/privacy" class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            Privacy Policy
          </a>
          <a href="/terms" class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            Terms of Service
          </a>
          <a href="/cookies" class="text-gray-600 hover:text-blue-600 text-sm transition-colors duration-200">
            Cookie Policy
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-blue-100 to-cyan-100 rounded-full opacity-20 -translate-x-1/2 translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-gradient-to-tl from-purple-100 to-pink-100 rounded-full opacity-20 translate-x-1/2 translate-y-1/2"></div>
  </div>
</footer>
