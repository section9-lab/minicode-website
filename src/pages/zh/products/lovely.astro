---
import Layout from '../../../layouts/Layout.astro';
import ProductDetail from '../../../components/ui/ProductDetail';
import { translations, type Locale } from '../../../lib/translations';

const locale = 'zh';
const t = translations[locale as Locale] || translations.en;

// Find OpenLovely product data
const product = t.products.items.find(item => item.name === 'OpenLovely');

if (!product) {
  return Astro.redirect('/zh/products');
}
---

<Layout title={`${product.name} - ${t.title}`} description={product.description} locale={locale}>
  <ProductDetail product={product} client:load />
</Layout>